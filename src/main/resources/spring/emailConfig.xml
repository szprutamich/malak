<?xml version="1.0" encoding="UTF-8" ?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host">
            <value>${mail.sender.host}</value>
        </property>
        <property name="port">
            <value>${mail.sender.port}</value>
        </property>
        <property name="protocol">
            <value>${mail.sender.protocol}</value>
        </property>
        <property name="username">
            <value>${mail.sender.username}</value>
        </property>
        <property name="password">
            <value>${mail.sender.pass}</value>
        </property>
        <property name="javaMailProperties">
            <map>
                <entry key="mail.debug">
                    <value>false</value>
                </entry>
                <entry key="mail.smtp.auth">
                    <value>${mail.sender.auth}</value>
                </entry>
                <entry key="mail.smtp.starttls.enable">
                    <value>${mail.sender.starttls}</value>
                </entry>
            </map>
        </property>
    </bean>
</beans>
